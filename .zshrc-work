# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh

# General aliases
alias j="~/scripts/links.sh j" # example: `j des 1884` or `j ptm 101`
alias k="killall -9 node && killall -9 npm"
alias c="clear"
alias rmno="rm -rf node_modules/"
alias fork="open /Applications/Fork.app/Contents/MacOS/Fork"

# npm aliases
alias ni="npm i"
alias ns="npm start"
alias nrd="npm run dev"
alias nrb="npm run build"
alias nrj="npm run jest"
alias nrjw="npm run jest:watch"
alias nrjc="npm run jest:coverage"
alias nrju="npm run jest:updateSnapshots"
alias nrut="npm run unit:test"

# monty aliases
alias monty="cd /Users/puled/git/full-monty"
alias mont="monty"
alias mon="monty"

# git aliases
alias gi="~/scripts/git.sh gi"
